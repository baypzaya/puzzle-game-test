<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/bookshop_details" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	android:background="@color/white">

	<include android:id="@+id/layout_book_head" layout="@layout/book_shop_head" />
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="@dimen/book_shop_detail_rl_height" android:background="@drawable/bar_bg_1">
		<!-- left -->
		<LinearLayout android:id="@+id/linearLeft"
			android:layout_width="@dimen/book_shop_detail_lin_left_width" android:layout_height="fill_parent"
			android:layout_marginTop="@dimen/book_shop_detail_lin_left_marginTop">
			<LinearLayout android:layout_width="@dimen/book_shop_detail_lin_left_bg_width"
				android:layout_height="@dimen/book_shop_detail_lin_left_bg_height" android:background="@drawable/book_frame_bg"
				android:gravity="center_vertical|center_horizontal"
				android:layout_marginLeft="@dimen/book_shop_detail_lin_left_bg_marginLeft" 
				android:layout_marginRight="@dimen/book_shop_detail_lin_left_bg_marginRinght">
				<ImageView android:id="@+id/book_icon"
					android:layout_width="@dimen/book_shop_detail_lin_left_bg_img_width" 
					android:layout_height="@dimen/book_shop_detail_lin_left_bg_img_height"
					android:background="@drawable/cover" />
			</LinearLayout>

		</LinearLayout>

		<!-- right -->
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			android:layout_toRightOf="@id/linearLeft"
			android:orientation="vertical" android:layout_marginTop="@dimen/book_shop_detail_lin_ringht_marginTop"
			android:layout_marginLeft="@dimen/book_shop_detail_lin_ringht_marginLeft">
			<TextView android:text="书名" android:textColor="#000000"
				android:id="@+id/book_name" android:textSize="@dimen/book_shop_detail_lin_right_bookname_size"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:singleLine="true" />

			<TextView android:text="作者: " android:id="@+id/book_author"
				android:textColor="@color/gray" android:textSize="@dimen/book_shop_detail_lin_ringht_tv_size"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:singleLine="true" />
			<TextView android:text="类别: " android:textColor="@color/gray"
				android:id="@+id/book_category" android:textSize="@dimen/book_shop_detail_lin_ringht_tv_size"
				android:layout_width="wrap_content" android:singleLine="true"
				android:layout_height="wrap_content" />

			<TextView android:text="状态: " android:textColor="@color/gray"
				android:id="@+id/book_status" android:textSize="@dimen/book_shop_detail_lin_ringht_tv_size"
				android:layout_marginBottom="@dimen/book_shop_detail_lin_ringht_tv_marginBottom" android:layout_width="wrap_content"
				android:singleLine="true" android:layout_height="wrap_content" />

			<TextView android:text="授权:云中书城 " android:textColor="@color/gray"
				android:id="@+id/book_status" android:textSize="@dimen/book_shop_detail_lin_ringht_tv_size"
				android:layout_marginBottom="@dimen/book_shop_detail_lin_ringht_tv_marginBottom" android:layout_width="wrap_content"
				android:singleLine="true" android:layout_height="wrap_content" />


			<!--  <LinearLayout android:id="@+id/detail_btn"
				android:layout_width="fill_parent" android:layout_height="@dimen/book_shop_detail_lin_ringht_btn_height"
				android:orientation="horizontal" android:layout_marginTop="@dimen/book_shop_detail_lin_ringht_btn_marginTop">

				<Button android:text="阅读" android:id="@+id/read_book"
					android:background="@drawable/book_shop_collect_book"
					android:layout_marginRight="@dimen/book_shop_detail_lin_ringht_btnRead_marginRight" 
					android:layout_width="@dimen/book_shop_detail_lin_ringht_btnRead_width"
					android:layout_height="@dimen/book_shop_detail_lin_ringht_btnRead_height" />

				<Button android:text="收藏" android:id="@+id/collect_book"
					android:background="@drawable/book_shop_collect_book"
					android:layout_width="@dimen/book_shop_detail_lin_ringht_btnCollect_width" 
					android:layout_height="@dimen/book_shop_detail_lin_ringht_btnCollect_height" />

			</LinearLayout>-->
		</LinearLayout>
		<LinearLayout android:id="@+id/detail_btn"
				android:layout_width="fill_parent" android:layout_height="@dimen/book_shop_detail_lin_ringht_btn_height"
				android:orientation="horizontal"   android:layout_marginBottom="24px"
				android:layout_alignParentBottom="true" android:gravity="center_horizontal">
				<Button android:text="阅读" android:id="@+id/read_book"
					android:textColor="#000000"
					android:layout_weight="1"
					android:layout_marginLeft="12px"
					android:textSize="@dimen/book_shop_detail_lin_btn_text_size"
					android:layout_marginRight="@dimen/book_shop_detail_lin_ringht_btnRead_marginRight" 
					android:layout_width="@dimen/book_shop_detail_lin_ringht_btnRead_width"
					android:layout_height="@dimen/book_shop_detail_lin_ringht_btnRead_height" />

				<Button android:text="收藏" android:id="@+id/collect_book"
				    android:layout_weight="1"
				    android:layout_marginRight="12px"
				    android:textSize="@dimen/book_shop_detail_lin_btn_text_size"
					android:textColor="#000000"
					android:layout_width="@dimen/book_shop_detail_lin_ringht_btnCollect_width" 
					android:layout_height="@dimen/book_shop_detail_lin_ringht_btnCollect_height" />

			</LinearLayout>

	</RelativeLayout>



	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ScrollView android:id="@+id/scrollview"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:orientation="vertical">

				<LinearLayout android:background="@drawable/bar_bg_3"
					android:layout_width="fill_parent" android:layout_height="@dimen/book_shop_detail_lin_bottom_height"
					android:gravity="center_vertical|left">
					<TextView android:text="书籍简介 " android:textColor="#333333"
						 android:layout_marginLeft="@dimen/book_shop_detail_lin_bottom_tv_marginLeft"
						android:layout_width="wrap_content" android:layout_height="wrap_content" />
				</LinearLayout>
				<TextView android:textColor="#666666" android:id="@+id/book_description"
					android:layout_margin="@dimen/book_shop_detail_lin_bottom_marginLeft" android:layout_width="fill_parent"
					android:layout_height="fill_parent" />

				<LinearLayout android:background="@drawable/bar_bg_3"
					android:layout_width="fill_parent" android:layout_height="@dimen/book_shop_detail_lin_bottom_height"
					android:gravity="center_vertical|left">
					<TextView android:text="云中书城简介 " android:textColor="#333333"
						 android:layout_marginLeft="@dimen/book_shop_detail_lin_bottom_tv_marginLeft"
						android:layout_width="wrap_content" android:layout_height="wrap_content" />

				</LinearLayout>

				<TextView android:textColor="#666666" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_margin="18.0px"
					android:text="        云中书城(www.yuncheng.com)是全球领先的数字书城，内容囊括盛大文学旗下起点中文网、红袖添香、小说阅读网、榕树下、潇湘书院、言情小说吧、天方听书网、悦读网等网站内容及众多全国知名出版社、图书公司电子书，为消费者提供包括数字图书、网络文学、数字报刊等数字商品。" />
			</LinearLayout>
		</ScrollView>
	</LinearLayout>


</LinearLayout>

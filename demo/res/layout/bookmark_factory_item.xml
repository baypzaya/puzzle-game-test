<?xml version="1.0" encoding="utf-8"?>


<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="@dimen/bookmark_factory_item_width" 
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    
			
    <TextView 
    android:id="@+id/bookmark_text"
    android:textColor="@color/black"
    android:text="免费"
    android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_marginBottom="@dimen/bookmark_factory_item_marginBottom"
	/>

	<ImageView 
	android:id="@+id/bookmark_image" 
	android:background="@drawable/bookmark_factory_1"
	android:layout_width="@dimen/bookmark_factory_item_img_width" 
	android:layout_height="@dimen/bookmark_factory_item_img_height"
	android:layout_marginBottom="@dimen/bookmark_factory_item_img_marginBottom"
	/>

	<ImageButton
	android:id="@+id/bookmark_button"
	android:background="@drawable/bookmark_selector" 
	android:layout_width="@dimen/bookmark_factory_item_imgButton_width" 
	android:layout_height="@dimen/bookmark_factory_item_imgButton_height"
	/>
	

	
</LinearLayout>
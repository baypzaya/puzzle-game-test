<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/titleStyle" android:visibility="gone"
	>
	
	<TextView 
		android:id="@+id/textview_head_title" 
		android:layout_centerInParent="true" 
		android:layout_height="wrap_content"
		android:layout_width="wrap_content" 
		android:text="@string/myBookShelf" 
		style="@style/titleTextStyle"
	/>

	<Button 
		android:id="@+id/btn_head_goto_bookshop" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="@dimen/book_shelf_head_marginRight" 
		android:text="@string/toBookShop"
		android:visibility="gone"
	/>
		
</RelativeLayout>
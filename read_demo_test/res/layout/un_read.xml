<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="@color/white"
>
	<LinearLayout 
		style="@style/titleStyle"
		android:gravity ="center_vertical"
		android:visibility="gone" >
		<Button  
			android:id="@+id/btn_unRead_back" 
			android:layout_width="@dimen/un_read_btn_back_width" 
			android:layout_height="@dimen/un_read_btn_back_height" 
			android:text="@string/back"
			android:layout_marginLeft="@dimen/un_read_btn_back_marginLeft"
			android:paddingLeft="@dimen/un_read_btn_back_paddingLeft"
			android:textColor="@color/white"
			android:background="@drawable/back_button_bg"
		/>
	</LinearLayout>

	
	<LinearLayout
		android:layout_width="fill_parent"
  	 	android:layout_height="@dimen/un_read_lin_height"
  	 	android:background="@drawable/bar_bg_5"
  	 	android:orientation="horizontal"
	>
		<TextView
			android:id="@+id/tvSection" 
			android:layout_width="@dimen/un_read_lin_tv_width"
  	 		android:layout_height="wrap_content"
  	 		android:layout_weight="1"
  	 		android:layout_gravity="center_vertical|left"
  	 		android:layout_marginLeft="@dimen/un_read_lin_tv_marginLeft"
  	 		android:textSize="@dimen/un_read_lin_tv_size"
  	 		android:textColor="#333333"
		/>
		<LinearLayout 
			android:layout_width="@dimen/un_read_lin_tv_width"
  	 		android:layout_height="wrap_content"
  	 		android:layout_weight="1"
  	 		android:layout_marginLeft="@dimen/un_read_lin_tv_marginLeft"
  	 		android:layout_gravity="center_vertical|left"
		>
			<Spinner
				android:id="@+id/spinnerSection" 
				android:layout_width="@dimen/un_read_lin_spinner_width"
  	 			android:layout_height="@dimen/un_read_lin_spinner_height"
  	 			android:background="@drawable/button_g"
  	 			android:paddingLeft="@dimen/un_read_lin_spinner_paddingLeft"
			/>
		</LinearLayout>
	</LinearLayout>
	
	<ListView
		android:id="@+id/lvUnRead" 
		android:layout_width="fill_parent"
  	 	android:layout_height="fill_parent"
  	 	android:listSelector="@drawable/directory_selector"
  	 	android:background="@drawable/bar_bg_5"
  	 	android:cacheColorHint="#00000000"
  	 	android:divider="@drawable/line"
	></ListView>
	
</LinearLayout>

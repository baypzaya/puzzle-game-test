<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/bookstore_bg" android:orientation="vertical">

	<include android:id="@+id/layout_book_head" layout="@layout/book_shop_head" />




	<LinearLayout android:id="@+id/layout_search"
		android:background="@drawable/bar_bg_2" android:layout_width="fill_parent"
		android:layout_height="@dimen/book_shop_item_height" android:orientation="horizontal"
		android:gravity="center">

		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent">


			<LinearLayout android:layout_width="0px"
				android:layout_height="0px" />

			<EditText android:id="@+id/input_search" android:singleLine="true"
				android:hint="请输入书名..." android:text="@string/reservation_keyWord"
				android:layout_marginLeft="@dimen/search_input_marginLeft" android:layout_width="@dimen/search_input_width"
				android:layout_height="@dimen/search_input_height" android:layout_centerInParent="true"
				android:layout_alignParentLeft="true" android:background="@drawable/btn_input_1"
				android:paddingLeft="@dimen/search_input_paddingLeft" />
	
			<Button android:id="@+id/click_search"
				android:layout_marginLeft="@dimen/search_input_marginLeft" android:layout_marginRight="@dimen/search_button_marginRight"
				android:layout_centerInParent="true" android:layout_toRightOf="@id/input_search"
				android:layout_width="@dimen/search_button_width" android:layout_height="@dimen/search_button_height"
				android:background="@drawable/seach" />

		</RelativeLayout>

	</LinearLayout>

	<FrameLayout android:id="@+id/id_frame"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/layout" android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent">

			<!-- 上面5个 -->
			<TextView android:id="@+id/KEY_TYPE_TOP_CENTET"
				android:textSize="@dimen/search_TextView_size" android:textColor="#339900"
				android:layout_x="@dimen/search_TextView_layout_x1" android:layout_y="@dimen/search_TextView_layout_y1"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />


			<TextView android:id="@+id/KEY_TYPE_TOP_SECEND_LEFT"
				android:textSize="@dimen/search_TextView_size" android:textColor="#ff0000"
				android:layout_x="@dimen/search_TextView_layout_x2" android:layout_y="@dimen/search_TextView_layout_y2"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:id="@+id/KEY_TYPE_TOP_SENEND_RIGHT"
				android:textSize="@dimen/search_TextView_size" android:textColor="#0000ff"
				android:layout_x="@dimen/search_TextView_layout_x3" android:layout_y="@dimen/search_TextView_layout_y3"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:id="@+id/KEY_TYPE_TOP_THIRD_LEFT"
				android:textSize="@dimen/search_TextView_size" android:textColor="#00ccff"
				android:layout_x="@dimen/search_TextView_layout_x4" android:layout_y="@dimen/search_TextView_layout_y4"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:id="@+id/KEY_TYPE_TOP_THIRD_RIGHT"
				android:textSize="@dimen/search_TextView_size" android:textColor="#ff3300"
				android:layout_x="@dimen/search_TextView_layout_x5" android:layout_y="@dimen/search_TextView_layout_y5"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<!-- 中间三个 -->

			<TextView android:id="@+id/KEY_TYPE_CENTER_LEFT"
				android:textSize="@dimen/search_TextView_size" android:textColor="#339900"
				android:layout_x="@dimen/search_TextView_layout_x6" android:layout_y="@dimen/search_TextView_layout_y6"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:id="@+id/KEY_TYPE_CENTER_Center"
				android:textSize="@dimen/search_TextView_size" android:textColor="#ff0000"
				android:layout_x="@dimen/search_TextView_layout_x7" android:layout_y="@dimen/search_TextView_layout_y7"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:id="@+id/KEY_TYPE_CENTER_RIGHT"
				android:textSize="@dimen/search_TextView_size" android:textColor="#0000ff"
				android:layout_x="@dimen/search_TextView_layout_x8" android:layout_y="@dimen/search_TextView_layout_y8"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<!-- 下面5个 -->
			<TextView android:id="@+id/KEY_TYPE_BOTTOM_SECEND_LEFT"
				android:textSize="@dimen/search_TextView_size" android:textColor="#336600"
				android:layout_x="@dimen/search_TextView_layout_x9" android:layout_y="@dimen/search_TextView_layout_y9"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:id="@+id/KEY_TYPE_BOTTOM_SECEND_RIGHT"
				android:textSize="@dimen/search_TextView_size" android:textColor="#33cccc"
				android:layout_x="@dimen/search_TextView_layout_x10" android:layout_y="@dimen/search_TextView_layout_y10"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:id="@+id/KEY_TYPE_BOTTOM_THIRD_LEFT"
				android:textSize="@dimen/search_TextView_size" android:textColor="#ffff66"
				android:layout_x="@dimen/search_TextView_layout_x11" android:layout_y="@dimen/search_TextView_layout_y11"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:id="@+id/KEY_TYPE_BOTTOM_THIRD_RIGHT"
				android:textSize="@dimen/search_TextView_size" android:textColor="#339900"
				android:layout_x="@dimen/search_TextView_layout_x12" android:layout_y="@dimen/search_TextView_layout_y12"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

			<TextView android:id="@+id/KEY_TYPE_BOTTOM_CENTER"
				android:textSize="@dimen/search_TextView_size" android:textColor="#000000"
				android:layout_x="@dimen/search_TextView_layout_x3" android:layout_y="@dimen/search_TextView_layout_y13"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />

		</AbsoluteLayout>

		<ListView android:id="@+id/search_listview"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:listSelector="@drawable/my_book_shelf_selector"
			android:cacheColorHint="#00000000" android:background="@drawable/bar_bg_1"
			android:divider="@drawable/line" />

	</FrameLayout>







</LinearLayout>
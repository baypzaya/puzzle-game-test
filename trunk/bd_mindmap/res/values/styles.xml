<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="custom_theme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/kbooks_activity_animation</item>
    </style>

    <style name="kbooks_activity_animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right_in_activity</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out_activity</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in_activity</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out_activity</item>
    </style>
    
    <style name="PopupAnimation" parent="android:Animation">
		<item name="android:windowEnterAnimation">@anim/popup_enter</item>
		<item name="android:windowExitAnimation">@anim/popup_exit</item>
	</style>

</resources>